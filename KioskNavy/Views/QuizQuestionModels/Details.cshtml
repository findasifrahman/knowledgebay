@model KioskNavy.Models.QuizQuestionModels
<style>
    body {
        background-color:  #0066cc;
       background-image: none;
        background-repeat: no-repeat;
        background-size: cover;
    }
</style>
@{
    Layout = @ViewBag.Layout;
    ViewBag.Title = "Details";
}
<div class="container">
    @{

    }
    @{


        if (Model.URLchoic1 != null)
        {
            if (Model.QuestionHighlighted != null)
            {
                <div id="divqh" class="btn-block panel panel-default" style="background:#006dcc;opacity:0.9">
                    <h2 style="color:whitesmoke;text-align:center;font-family:Impact">@Model.Question @Model.QuestionHighlighted </h2>
                </div>
            }
            else
            {
                <div id="divqm" class="panel panel-primary" style="background:#337ab7;;opacity:0.95">
                    <h2 style="color:whitesmoke;text-align:center;font-family:Impact">@Model.Question</h2>
                </div>

            }
            <div class="row box">
                <div class="col-md-5 slide-in" id="divc31">
                    <div class="wrapper fade-in" style="text-align:left;max-width:100%;max-height:100%;">
                        <img id="c1Img" src="@Url.Content(Model.URLchoic1)" alt="@Model.Question" width="430" height="100" />
                    </div>
                    <br />
                    <div class="row panel panel-default" style="background-color:#337ab7;opacity:0.95;text-align:left">
                        <button id="choice1" name="choice1" class="a2 green typewriter" style="text-align:left;width:513px;height:auto;font-size:20px;font-family:Impact"> @Model.choic1</button>
                    </div>
                </div>
                <div class="col-md-2"></div>
                <div class="col-md-5 slide-in" id="divc32">
                    <div class="wrapper fade-in" style="text-align:left;max-width:100%;max-height:100%;">
                        <img id="c2Img" src="@Url.Content(Model.URLchoic2)" alt="@Model.Question" width="430" height="100" />
                    </div>
                    <br />
                    <div class="row panel panel-default" style="background-color:#337ab7;opacity:0.95;text-align:left">
                        <button id="choice2" name="choice2" class="a2 green" style="text-align:left;width:513px;height:auto;font-size:20px;font-family:Impact"> @Model.choic2</button>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-5 slide-in" id="divc33">
                    <div class="wrapper fade-in" style="text-align:left;max-width:100%;max-height:100%;">
                        <img id="c3Img" src="@Url.Content(Model.URLchoic3)" alt="@Model.Question" width="430" height="100" />
                    </div>
                    <br />
                    <div class="row panel panel-default" style="background-color:#337ab7;opacity:0.9;text-align:left">
                        <button id="choice3" name="choice3" class="a2 green" style="text-align:left;width:513px;height:auto;font-size:20px;font-family:Impact">@Model.choic3</button>
                    </div>
                </div>
                <div class="col-md-2"></div>
                <div class="col-md-5 slide-in" id="divc34">
                    <div class="wrapper fade-in" style="text-align:left;max-width:100%;max-height:100%;">
                        <img id="c4Img" src="@Url.Content(Model.URLchoic4)" alt="@Model.Question" width="430" height="100" />
                    </div>
                    <br />
                    <div class="row panel panel-default" style="background-color:#337ab7;opacity:0.9;text-align:left">
                        <button id="choice4" name="choice4" class="a2 green" style="text-align:left;width:513px;height:auto;font-size:20px;font-family:Impact">@Model.choic4</button>
                    </div>
                </div>
            </div>
        }
        else
        {
            if (Model.QuestionHighlighted != null)
            {
                <div id="divqh" class="btn-block panel panel-default" style="background:#006dcc;opacity:0.9">
                    <h1 style="color:whitesmoke;text-align:center;font-family:Impact">@Model.Question @Model.QuestionHighlighted </h1>
                </div>
            }
            else
            {
                <div id="divqm" class="panel panel-primary" style="background:#337ab7;;opacity:0.95">
                    <h1 style="color:whitesmoke;text-align:center;font-family:Impact">@Model.Question</h1>
                </div>

            }
            <div class="row">
                <div class="col-md-5">
                    @{

                        if (Model.vidURL != null)
                        {
                            <br /><br />
                            <div class="wrapper" style="text-align:center;max-width:100%;max-height:100%;">
                                <video id="myVid22" controls>
                                    <source src="@Url.Content(Model.vidURL)" id="video_here">
                                    Your browser does not support HTML5 video.
                                </video>
                            </div>
                        }
                    }
                    @{
                        if (Model.imageURL != null)
                        {
                            <div class="wrapper fade-in" style="text-align:center;max-width:100%;max-height:100%;">
                                <img id="myImg" src="@Url.Content(Model.imageURL)" alt="@Model.Question" width="500" height="300" />
                            </div>
                        }
                    }
                </div>
                @{

                    if (Model.vidURL != null || Model.imageURL != null)
                    {
                        <div class="col-md-1"></div>
                        <div class="col-md-6">
                            <br />
                            <div class="wrapper fade-in">
                                <div id="divc31" class="row panel panel-default slide-in" style="background-color:#337ab7;opacity:0.9">
                                    @{
                                        if (Model.choic1 != null)
                                        {
                                            <button id="choice1" name="choice1" class="a2 green" style="text-align:left;width:615px;height:auto;font-size:28px;font-family:Impact">@Model.choic1</button>
                                        }
                                    }

                                </div>
                                <div id="divc32" class="row panel panel-default slide-in" style="background-color:#337ab7;opacity:0.9">
                                    @{
                                        if (Model.choic2 != null)
                                        {
                                            <button id="choice2" name="choice2" class="a2 green" style="text-align:left;width:615px;height:auto;font-size:28px;font-family:Impact">@Model.choic2</button>
                                        }
                                    }
                                </div>
                                <div id="divc33" class="row panel panel-default slide-in" style="background-color:#337ab7;opacity:0.9">
                                    @{
                                        if (Model.choic3 != null)
                                        {
                                            <button id="choice3" name="choice3" class="a2 green" style="text-align:left;width:615px;height:auto;font-size:28px;font-family:Impact">@Model.choic3</button>
                                        }
                                    }

                                </div>

                                <div id="divc34" class="row panel panel-default slide-in" style="background-color:#337ab7;opacity:0.9">
                                    @{
                                        if (Model.choic4 != null)
                                        {
                                            <button id="choice4" name="choice4" class="a2 green" style="text-align:left;width:615px;height:auto;font-size:28px;font-family:Impact">@Model.choic4</button>
                                        }
                                    }
                                </div>

                            </div>
                    </div>
            }
            else
            {
                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-10 col-md-push-1">
                        <br />
                        <div class="wrapper">
                            <div id="divc31" class="row panel panel-default slide-in" style="background-color:#337ab7;opacity:0.9">
                                @{
                                    if (Model.choic1 != null)
                                    {
                                        <button id="choiceA" name="choiceA" class="a2 green" style="opacity:0.95;text-align:left;width:50px;height:auto;font-size:30px;font-family:Impact"><b>A</b></button>
                                        <button id="choice1" name="choice1" class="a2 green" style="text-align:left;width:991px;height:auto;font-size:30px;font-family:Impact">@Model.choic1</button>
                                    }
                                }
                            </div>

                            <div id="divc32" class="row panel panel-default slide-in" style="background-color:#337ab7;opacity:0.9">
                                @{
                                    if (Model.choic2 != null)
                                    {
                                        <button id="choiceB" name="choiceB" class="a2 green" style="opacity:0.95;text-align:left;width:50px;height:auto;font-size:30px;font-family:Impact"><b>B</b></button>
                                        <button id="choice2" name="choice2" class="a2 green" style="text-align:left;width:991px;height:auto;font-size:30px;font-family:Impact">@Model.choic2</button>
                                    }
                                }
                            </div>

                            <div id="divc33" class="row panel panel-default slide-in" style="background-color:#337ab7;opacity:0.9">
                                @{
                                    if (Model.choic3 != null)
                                    {
                                        <button id="choiceC" name="choiceC" class="a2 green" style="opacity:0.95;text-align:left;width:50px;height:auto;font-size:30px;font-family:Impact"><b>C</b></button>
                                        <button id="choice3" name="choice3" class="a2 green" style="text-align:left;width:991px;height:auto;font-size:30px;font-family:Impact">@Model.choic3</button>
                                    }
                                }
                            </div>

                            <div id="divc34" class="row panel panel-default slide-in" style="background-color:#337ab7;opacity:0.9">
                                @{
                                    if (Model.choic4 != null)
                                    {
                                        <button id="choiceD" name="choiceD" class="a2 green" style="opacity:0.95;text-align:left;width:50px;height:auto;font-size:30px;font-family:Impact"><b>D</b></button>
                                        <button id="choice4" name="choice4" class="a2 green" style="text-align:left;width:991px;height:auto;font-size:30px;font-family:Impact">@Model.choic4</button>
                                    }
                                }
                            </div>

                        </div>
                    </div>
                </div>
                                    }

                }
            </div>
                                                                }
    }
</div>
