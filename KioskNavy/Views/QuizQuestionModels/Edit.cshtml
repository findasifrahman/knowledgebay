             @{
                 if (Model.vidURL != null)
                 {
                    <div id="mainvideochoice" class="form-group col-lg-6">
                        @Html.Label("Choose Video", htmlAttributes: new { @class = "control-label col-md-2", @style = "text-allign:center" })
